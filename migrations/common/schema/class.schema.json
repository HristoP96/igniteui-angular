{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "ClassChange": {
            "properties": {
                "name": {
                    "description": "Name of the class to change",
                    "type": "string"
                },
                "remove": {
                    "description": "Remove directive/component",
                    "type": "boolean"
                },
                "replaceWith": {
                    "description": "Replace original selector with new one",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "type": "object"
        }
    },
    "properties": {
        "changes": {
            "description": "An array of changes to output properties",
            "items": {
                "$ref": "#/definitions/ClassChange"
            },
            "type": "array"
        }
    },
    "required": [
        "changes"
    ],
    "type": "object"
}

